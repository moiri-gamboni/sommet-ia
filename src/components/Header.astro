---
import Container from './Container.astro';
import DiamondIcon from './DiamondIcon.astro';
import Logo from './Logo.astro';
import Button from './Button.astro';
---

<style>
  .header-blur {
    transition: backdrop-filter 0.3s ease, background-color 0.3s ease;
  }

  /* Modern browsers with animation-timeline support */
  @supports (animation-timeline: scroll()) {
    @media (prefers-reduced-motion: no-preference) {
      .header-blur {
        animation: header-scroll linear both;
        animation-timeline: scroll();
        animation-range: 0 200px;
      }

      @keyframes header-scroll {
        from {
          backdrop-filter: blur(0);
          background-color: rgba(255, 255, 255, 0);
        }
        to {
          backdrop-filter: blur(12px);
          background-color: rgba(255, 245, 245, 0.7);
        }
      }
    }
  }
</style>

<header 
  class="sticky top-0 z-40 flex-none py-4 sm:p-8 header-blur" 
  id="main-header"
>
  <Container class="sm:px-0 md:px-6">
    <div class="grid grid-cols-[1fr_auto_1fr] lg:grid-cols-[1fr_auto_1fr] items-center gap-4">
      {/* Logo - hidden on mobile */}
      <div class="hidden sm:block lg:m-0">
        <a href="/">
          <Logo class="h-16" hoverable={true}/>
        </a>
      </div>

      {/* Date - only visible on lg and up */}
      <div class="hidden lg:block whitespace-nowrap py-4 font-mono text-green-800">
        <div class="flex items-center gap-4">
          <p>
            <time datetime="2025-02-08">8 février 2025</time>
          </p>
          <DiamondIcon class="h-1.5 w-1.5 overflow-visible fill-current stroke-current" />
          <p>Paris</p>
        </div>
      </div>

      {/* Buttons */}
      <div class="col-span-3 sm:col-start-2 sm:col-span-2 lg:col-start-3 lg:col-span-1 flex justify-between sm:justify-end gap-4 lg:m-0">
        <Button class="h-12 sm:h-auto" href="https://lu.ma/cvti999q" variant="outline">
          S'inscrire à l'événement
        </Button>
        <Button 
          href="/contribuer" 
          class="h-12 sm:h-auto"
          variant="solid"
          style="background-color: var(--christmas-green); color: white;"
        >
          Contribuer
        </Button>
      </div>
    </div>
  </Container>
</header>

<script>
  function initHeaderScroll() {
    const hasTimelineSupport = CSS.supports('animation-timeline: scroll()');

    if (!hasTimelineSupport) {
      const header = document.getElementById('main-header');
      if (!header) return;
      
      window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;
        const threshold = 200;
        
        const progress = Math.min(scrollPosition / threshold, 1);
        const blur = 12 * progress;
        const opacity = 0.7 * progress;
        
        header.style.backdropFilter = `blur(${blur}px)`;
        header.style.backgroundColor = `rgba(255, 255, 255, ${opacity})`;
      });
    }
  }

  initHeaderScroll();
</script> 